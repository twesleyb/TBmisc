#!/usr/bin/env Rscript

# Insure any changes have been pushed to git.
#message("Have you pushed changes to git?")
#source(file.path(dirname(getwd()),"R","prompt.R"))
#prompt()

# Input arguments.
git_user <- "twesleyb"
package_name <- "TBmiscr"

# Check if package is installed.
package <- file.path(git_user,package_name)
is_installed <- package %in% rownames(installed.packages())

# If installed, then remove it.
if (is_installed) { remove.packages(package) }

# Install package from github.
devtools::install_github(package)
